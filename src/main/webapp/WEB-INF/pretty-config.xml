<pretty-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://ocpsoft.com/prettyfaces/3.3.3"
               xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.3
                                   		http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.3.xsd">

    <url-mapping id="home">
        <pattern value="/"/>
        <view-id value="/faces/index.xhtml"/>
    </url-mapping>

    <url-mapping id="signin">
        <pattern value="/signin"/>
        <view-id value="/faces/signin.xhtml"/>
    </url-mapping>

    <url-mapping id="error">
        <pattern value="/error"/>
        <view-id value="/faces/error.xhtml"/>
    </url-mapping>

    <url-mapping id="settings">
        <pattern value="/settings"/>
        <view-id value="/faces/settings.xhtml"/>
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/register"/>
        <view-id value="/faces/register.xhtml"/>
    </url-mapping>

    <url-mapping id="profile">
        <pattern value="/id#{id}"/>
        <view-id value="/faces/profile.xhtml"/>
    </url-mapping>

    <url-mapping id="profile">
        <pattern value="/#{urlname}"/>
        <view-id value="/faces/profile.xhtml"/>
    </url-mapping>
</pretty-config>
